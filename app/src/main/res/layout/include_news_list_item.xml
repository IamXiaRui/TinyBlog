<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="24dp"
    android:baselineAligned="false"
    android:background="@null"
    android:layout_marginTop="8dp"
    android:orientation="horizontal"
    android:weightSum="3">

    <!-- 文章阅读数 -->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_news_list_item_icon_read"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_read" />

        <TextView
            android:id="@+id/tv_news_list_icon_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/str_default_num"
            android:layout_toEndOf="@+id/iv_news_list_item_icon_read"
            android:textColor="@color/md_grey_500"
            android:textSize="12sp" />

    </RelativeLayout>

    <!-- 文章喜欢数 -->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_news_list_item_icon_like"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_like" />

        <TextView
            android:id="@+id/tv_news_list_icon_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/str_default_num"
            android:layout_toEndOf="@+id/iv_news_list_item_icon_like"
            android:layout_marginRight="12dp"
            android:textColor="@color/md_grey_500"
            android:textSize="12sp" />

    </RelativeLayout>

    <!-- 文章评论数 -->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_news_list_icon_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:text="@string/str_default_num"
            android:textColor="@color/md_grey_500"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/tv_news_list_icon_comment"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_comment" />

    </RelativeLayout>

</LinearLayout>