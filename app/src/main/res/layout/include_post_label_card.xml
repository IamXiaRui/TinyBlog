<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:text="相关标签"
            android:textColor="@color/md_grey_700"
            android:textSize="16sp" />

        <View
            android:layout_width="24dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:background="@color/md_grey_500" />

        <me.next.tagview.TagCloudView
            android:id="@+id/tcv_post_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/md_white_1000"
            app:tcvBackground="@drawable/tag_selector_back"
            app:tcvBorder="8dp"
            app:tcvCanTagClick="true"
            app:tcvItemBorderHorizontal="8dp"
            app:tcvItemBorderVertical="6dp"
            app:tcvSingleLine="false"
            app:tcvTextColor="#ffffff" />

    </LinearLayout>

</android.support.v7.widget.CardView>