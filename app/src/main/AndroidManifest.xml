<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tinyblog">

    <!-- 所需权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".sys.App"
        android:allowBackup="true"
        android:icon="@mipmap/icon_logo"
        android:label="@string/app_name"
        tools:replace="android:icon"
        android:supportsRtl="true">
        <activity
            android:name="com.tinyblog.activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tinyblog.activity.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.tinyblog.activity.NewPostActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.tinyblog.activity.PostDetailsActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.tinyblog.activity.SearchActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.tinyblog.activity.CurPostsListActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>